<Window x:Class="Books.Dialogs.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="{Binding TitleText}"
        SizeToContent="Height"
        Width="350">
    <StackPanel Margin="5">
        <DockPanel>
            <icons:PackIconFontAwesome Kind="BombSolid" DockPanel.Dock="Left" Height="48" Width="48" Margin="5"/>
            <TextBlock Margin="5" TextWrapping="Wrap" DockPanel.Dock="Top" Text="{Binding MessageText}">
            </TextBlock>
        </DockPanel>
        <Button Click="Close" Grid.Column="1">
            Close
        </Button>
    </StackPanel>
</Window>
